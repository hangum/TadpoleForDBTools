<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<!--
	SQLite 3.7.2 버전으로 초기 작업을 시작했습니다.
	이전 버전으로는 테스트 못해봤어요.  - 12.08.07
	
	@author hangum	
 --> 
<sqlMap namespace="SQLite_query">

<!-- 
	table 이름
 -->
<select id="tableList" resultClass="com.hangum.db.dao.mysql.TableDAO" parameterClass="java.lang.String">
	SELECT name 
	FROM sqlite_master
	WHERE type = 'table'
	ORDER BY name
</select>

<!-- 
	table, view의 컬럼 정보
 -->
<select id="tableColumnList" resultClass="com.hangum.db.dao.mysql.TableColumnDAO" parameterClass="java.util.HashMap">
	 PRAGMA table_info($table$)
</select>

<!-- 
	테이블간의 관계 목록 정보를 얻습니다.
	erd 그릴때 관계 목록을 보여주기 위한 목적입니다.
 -->
<select id="referencedTableList"  resultClass="com.hangum.db.dao.sqlite.SQLiteRefTableDAO" parameterClass="java.lang.String">
select tbl_name, sql 
from sqlite_master
where type = 'table'
	and tbl_name in ($tables$) 
and sql like '%FOREIGN KEY%'
</select>

<select id="referencedTableListALL"  resultClass="com.hangum.db.dao.sqlite.SQLiteRefTableDAO" >
select tbl_name, sql 
from sqlite_master
where type = 'table'
and sql like '%FOREIGN KEY%'
</select>
	
<!-- 
	view 정보
 -->
<select id="viewList" resultClass="java.lang.String" parameterClass="java.lang.String">
	SELECT name
	FROM sqlite_master
	WHERE type = 'view'
	ORDER BY name
</select>
	
<!-- 
	index 정보
 -->
 <select id="indexList" resultClass="com.hangum.db.dao.mysql.InformationSchemaDAO" parameterClass="java.lang.String">
 SELECT name as index_name,
 		tbl_name as table_name
	FROM sqlite_master
	WHERE type = 'index'
	ORDER BY name      
</select>

<!-- 
	procedure list - sqlite는 없음.
 -->
<select id="procedureList" resultClass="com.hangum.db.dao.mysql.ProcedureFunctionDAO" parameterClass="java.lang.String">
SELECT name as procedure_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'procedure_name'
	ORDER BY name 
</select>

<!-- 
	function list - sqlite는 없음.
 -->
<select id="functionList" resultClass="com.hangum.db.dao.mysql.ProcedureFunctionDAO" parameterClass="java.lang.String">
SELECT name as function_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'procedure_name'
	ORDER BY name 
</select>

<!-- 
	show triggers
 -->
<select id="triggerList" resultClass="com.hangum.db.dao.mysql.TriggerDAO" parameterClass="java.lang.String">
	SELECT name as trigger_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'trigger'
	ORDER BY name  
</select>

<!-- 
	get function, object  -sqlite없음
 -->
<select id="functionSource" resultClass="java.lang.String" parameterClass="java.lang.String">
	SELECT name as trigger_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'trigger'
	ORDER BY name  
</select>

</sqlMap>
