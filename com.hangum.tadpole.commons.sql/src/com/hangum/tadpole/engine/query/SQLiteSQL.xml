<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<!--
	SQLite 3.7.2 버전으로 초기 작업을 시작했습니다.
	이전 버전으로는 테스트 못해봤어요.  - 12.08.07
	
	@author hangum	
 --> 
<sqlMap namespace="SQLite_query">

<!--
	database connection test 
 -->
<select id="connectionCheck" resultClass="java.lang.String" parameterClass="java.lang.String">
SELECT name FROM sqlite_master where 1 = 0 
</select>

<!-- 
	table 이름
 -->
<select id="tableList" resultClass="com.hangum.tadpole.sql.dao.mysql.TableDAO" parameterClass="java.lang.String">
	SELECT name, sql as comment
	FROM sqlite_master
	WHERE type = 'table'
	ORDER BY name
</select>

<!-- 
	table, view의 컬럼 정보
 -->
<select id="tableColumnList" resultClass="com.hangum.tadpole.sql.dao.mysql.TableColumnDAO" parameterClass="java.util.HashMap">
	 PRAGMA table_info($table$)
</select>

<select id="tableForeignKeyList" resultClass="com.hangum.tadpole.sql.dao.sqlite.SQLiteForeignKeyListDAO" parameterClass="java.util.HashMap">
	 PRAGMA foreign_key_list($table$)
</select>

<!-- 
	테이블간의 관계 목록 정보를 얻습니다.
	erd 그릴때 관계 목록을 보여주기 위한 목적입니다.
 -->
<select id="referencedTableList"  resultClass="com.hangum.tadpole.sql.dao.sqlite.SQLiteRefTableDAO" parameterClass="java.lang.String">
select tbl_name, sql 
from sqlite_master
where type = 'table'
	and tbl_name in ($tables$) 
and sql like '%FOREIGN KEY%'
</select>

<select id="referencedTableListALL"  resultClass="com.hangum.tadpole.sql.dao.sqlite.SQLiteRefTableDAO" >
select tbl_name, sql 
from sqlite_master
where type = 'table'
and sql like '%FOREIGN KEY%'
</select>
	
<!-- 
	view 정보
 -->
<select id="viewList" resultClass="java.lang.String" parameterClass="java.lang.String">
	SELECT name
	FROM sqlite_master
	WHERE type = 'view'
	ORDER BY name
</select>
	
<!-- 
	index 정보
 -->
 <select id="indexList" resultClass="com.hangum.tadpole.sql.dao.mysql.InformationSchemaDAO" parameterClass="java.lang.String">
 SELECT name as index_name,
 		tbl_name as table_name
	FROM sqlite_master
	WHERE type = 'index'
	ORDER BY name      
</select>

<!-- 
	index의 디테일 정보
 -->
 <select id="indexDetailList" resultClass="com.hangum.tadpole.sql.dao.mysql.InformationSchemaDAO" parameterClass="java.util.Map">
    SELECT *
    FROM information_schema.CONSTRAINT_COLUMN_USAGE
    WHERE 1=0
</select>
<!-- 
	procedure list - sqlite는 없음.
 -->
<select id="procedureList" resultClass="com.hangum.tadpole.sql.dao.mysql.ProcedureFunctionDAO" parameterClass="java.lang.String">
SELECT name as procedure_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'procedure_name'
	ORDER BY name 
</select>

<!-- 
	function list - sqlite는 없음.
 -->
<select id="functionList" resultClass="com.hangum.tadpole.sql.dao.mysql.ProcedureFunctionDAO" parameterClass="java.lang.String">
SELECT name as function_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'procedure_name'
	ORDER BY name 
</select>

<!-- 
	show triggers
 -->
<select id="triggerList" resultClass="com.hangum.tadpole.sql.dao.mysql.TriggerDAO" parameterClass="java.lang.String">
	SELECT name as trigger,
 		tbl_name as table_name,
 		sql as statement
	FROM sqlite_master
	WHERE type = 'trigger'
	ORDER BY trigger  
</select>

<!-- 
	get function, object  -sqlite없음
 -->
<select id="functionSource" resultClass="java.lang.String" parameterClass="java.lang.String">
	SELECT name as trigger_name,
 		tbl_name as db_name
	FROM sqlite_master
	WHERE type = 'trigger'
	ORDER BY name  
</select>

<!-- 
	table information
 -->
<select id="tableInformation" resultClass="java.util.HashMap" parameterClass="java.lang.String">
	SELECT name, sql as comment
	FROM sqlite_master
	WHERE type = 'table'
	ORDER BY name 
</select>

<!-- 
	column information
 -->
<select id="columnInformation" resultClass="java.util.HashMap" parameterClass="java.lang.String">
	 PRAGMA table_info($table$)
</select>

<!-- 
	Table DDL Script
 -->
<select id="getTableScript" resultClass="java.lang.String" parameterClass="java.lang.String">
	SELECT sql
	FROM sqlite_master
	WHERE name = #table# AND
		type = 'table'	
</select>

<!-- 
	View DDL Script
 -->
<select id="getViewScript" resultClass="java.lang.String" parameterClass="java.lang.String">
	SELECT sql
	FROM sqlite_master
	WHERE name = #table#  AND
		type = 'view'		
</select>

<!-- 
	INDEX DDL Script
 -->
<select id="getIndexScript" resultClass="java.lang.String" parameterClass="java.util.HashMap">
	SELECT sql
	FROM sqlite_master
	WHERE name = #index_name#  AND
		tbl_name = #table_name# AND
		type = 'index'		
</select>

</sqlMap>
